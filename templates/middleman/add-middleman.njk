{% extends "templates/layout/app.html" %} {% block content %}

<main class="main-view">
  <h5>اضافة وسيط</h5>
  <div class="container-xl mx-0 section">
    <div class="row">
      <div class="col-12 col-md-6 p-2">
        <div class="form-group">
          <label for="name">اسم الوسيط</label>
          <input type="text" class="form-control" placeholder="اسم الوسيط" />
        </div>
      </div>
      <div class="col-12 col-md-6 p-2">
        <div class="form-group">
          <label for="name">رقم الجوال</label>
          <input type="text" class="form-control" placeholder="اسم الوسيط" />
        </div>
      </div>
      <div class="col-12 col-md-6 p-2">
        <label for="payment-method"> طريقة المحاسبة </label>
        <div>
          <div class="row mt-2">
            <div class="col-md-6">
              <input
                class="form-check-input"
                type="radio"
                name="flexRadioDefault"
                id="flexRadioDefault1"
              />
              <label class="form-check-label" for="flexRadioDefault1">
                نسبة من المشروع
              </label>
            </div>
            <div class="col-md-6">
              <input
                class="form-check-input"
                type="radio"
                name="flexRadioDefault"
                id="flexRadioDefault2"
                checked
              />
              <label class="form-check-label" for="flexRadioDefault2">
                قيمة تحدد مع كل مشروع
              </label>
            </div>
          </div>
          <div class="row">
            <div class="col p-2">
              <div class="form-group">
                <input
                  type="text"
                  class="form-control"
                  placeholder="تحديد النسبة"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

{% endblock %}
